{
  "type": "switch",
  "version": "1.3.0",
  "author": "Jean-Michel DECORET, Jean-Michel BERHAULT, Nicolas HILAIRE",
  "url": "https://github.com/Yadoms/yadoms/wiki/switch",
  "credits": "[bootstrap toogle](http://www.bootstraptoggle.com/)",
  "dependencies": {
     "yadoms" : {
        "minimumVersion" : "2.3.0-beta.3"
     }
  },    
  "dimensions": {
    "min": {
      "x": 1,
      "y": 1
    },
    "max": {
      "x": 1,
      "y": 1
    },
    "default": {
      "x": 1,
      "y": 1
    }
  },
  "hasTitle": true,
  "configurationSchema": {
    "device": {
      "type": "keyword",
      "expectedCapacity": ["switch", "dimmable", "event"],
      "expectedKeywordAccess": "get"
    },
    "invert": {
      "type": "bool",
      "defaultValue": "false"
    },
    "askConfirmation": {
      "type": "bool",
      "defaultValue": "false"
    },    
    "kind": {
      "type": "radioSection",
      "content": {
        "horizontalInverter": {
          "type": "section"
        },
        "verticalInverter": {
          "type": "section"
        },
        "pushButton": {
          "type": "section",
          "content": {
            "icon": {
              "type": "icon"
            }
          }
        },
        "toggle": {
          "type": "section"
        }
      }
    }
  }
}