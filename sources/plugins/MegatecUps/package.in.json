		"UpsShutdownTimers": {
			"type": "section",
			"content": {
				"ShutdownDelay": {
					"type": "decimal",
					"defaultValue": ".3",
					"minimumValue": ".2",
					"maximumValue": "9",
					"precision": "1"
				},
				"RestoreDelay": {
					"type": "int",
					"defaultValue": "1",
					"minimumValue": "1",
					"maximumValue": "9999"
				}
			}
		}
