	"supportedPlatforms": "all",
	"configurationSchema": {
		"SerialPort": {
			"type": "enum",
			"values": {
				"__Binding__": {
					"type": "system",
					"query": "serialPorts"
				}
			}
		},
		"UpsBeep": {
			"type": "bool",
			"defaultValue": "true"
